<h2 class="form-title">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "password-reset-form bg-soft-white p-4 shadow-sm" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>