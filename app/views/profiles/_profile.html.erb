<div id="<%= dom_id(profile) %>" class="profile-details mb-3 p-3 border rounded"> <!-- Added classes for styling -->
  <p>
    <strong>User:</strong>
    <%= profile.user.username %> <!-- Assuming you want to display the username instead of user_id -->
  </p>

  <p>
    <strong>Bio:</strong>
    <%= profile.bio.present? ? profile.bio : "No bio available." %> <!-- Handle empty bio gracefully -->
  </p>

  <p>
    <strong>Location:</strong>
    <%= profile.location.present? ? profile.location : "Location not specified." %> <!-- Handle empty location -->
  </p>

  <p>
    <strong>Avatar:</strong>
    <% if profile.avatar.attached? %>
      <%= image_tag profile.avatar.variant(resize_to_fill: [100, 100]), alt: "Avatar", class: "img-thumbnail" %>
    <% else %>
      <%= image_tag asset_path('default_profile_picture.png'), size: "100x100", alt: "Default Avatar", class: "img-thumbnail" %>
    <% end %>
  </p>
</div>