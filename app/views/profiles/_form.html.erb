<%= form_with(model: profile, local: true, html: { multipart: true }) do |form| %>
  <% if profile.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
        <% profile.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :user_id, "Created By" %>
    <!-- Show the username of the user who created the profile, not editable -->
    <%= form.text_field :user_id, value: current_user.username, class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= form.label :bio, "Bio" %>
    <%= form.text_area :bio, class: "form-control", rows: 3 %> <!-- Added rows for better usability -->
  </div>

  <div class="form-group">
    <%= form.label :location, "Location" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :avatar, "Avatar" %>
    <%= form.file_field :avatar, class: "form-control-file" %>
  </div>

  <div class="mt-3"> <!-- Added margin-top for spacing -->
    <%= form.submit "Update Profile", class: "btn btn-primary" %>
  </div>
<% end %>