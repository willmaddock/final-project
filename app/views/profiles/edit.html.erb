<h1>Editing Profile</h1>

<%= form_with(model: @profile) do |form| %>
  <div class="mb-3"> <!-- Use mb-3 for consistent margin bottom -->
    <%= form.label :user_id, "User" %>
    <%= form.collection_select :user_id, @users, :id, :username, {}, { class: 'form-select', disabled: true } %>
  </div>

  <div class="mb-3">
    <%= form.label :bio %>
    <%= form.text_area :bio, class: 'form-control', rows: 3 %> <!-- Added rows for better usability -->
  </div>

  <div class="mb-3">
    <%= form.label :location %>
    <%= form.text_field :location, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, class: 'form-control' %>
  </div>

  <%= form.submit "Update Profile", class: "btn btn-primary" %>
<% end %>

<br>

<div>
  <%= link_to "Show this profile", @profile, class: "btn btn-info" %> |
  <%= link_to "Back to Profiles", profiles_path, class: "btn btn-secondary" %>
</div>