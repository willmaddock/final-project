<p style="color: green"><%= notice %></p>

<h1>Access Points</h1>

<%= link_to 'New Access Point', new_access_point_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
  <tr>
    <th>Location</th>
    <th>Access Level</th>
    <th>Description</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @access_points.each do |access_point| %>
    <tr>
      <td><%= access_point.location %></td>
      <td><%= access_point.access_level %></td>
      <td><%= access_point.description %></td>
      <td><%= access_point.status ? 'Active' : 'Inactive' %></td>
      <td><%= link_to 'Show', access_point %></td>
      <td><%= link_to 'Edit', edit_access_point_path(access_point) %></td>
      <td><%= link_to 'Destroy', access_point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>