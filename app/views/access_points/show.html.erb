<h1>Access Point Details</h1>

<!-- Displaying access point details in a structured way -->
<table class="table table-bordered table-striped mb-4">
  <tbody>
  <tr>
    <th class="text-end">Location:</th>
    <td><%= @access_point.location %></td>
  </tr>
  <tr>
    <th class="text-end">Access Level:</th>
    <td><%= @access_point.access_level %></td>
  </tr>
  <tr>
    <th class="text-end">Description:</th>
    <td><%= @access_point.description %></td>
  </tr>
  <tr>
    <th class="text-end">Status:</th>
    <td>
        <span class="<%= @access_point.status ? 'text-success' : 'text-danger' %>">
          <%= @access_point.status ? 'Active' : 'Inactive' %>
        </span>
    </td>
  </tr>
  </tbody>
</table>

<!-- Action Buttons Section -->
<div class="d-flex gap-2 mb-4">
  <%= link_to 'Edit this Access Point', edit_access_point_path(@access_point), class: 'btn btn-warning' %>
  <%= link_to 'Back to Access Points', access_points_path, class: 'btn btn-secondary' %>
  <%= button_to 'Delete this Access Point', @access_point, method: :delete, data: { confirm: 'Are you sure you want to delete this access point?' }, class: 'btn btn-danger' %>
</div>