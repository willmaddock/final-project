<h1>Access Point Details</h1>

<p>
  <strong>Location:</strong>
  <%= @access_point.location %>
</p>

<p>
  <strong>Access Level:</strong>
  <%= @access_point.access_level %>
</p>

<p>
  <strong>Description:</strong>
  <%= @access_point.description %>
</p>

<p>
  <strong>Status:</strong>
  <span class="<%= @access_point.status ? 'text-success' : 'text-danger' %>">
    <%= @access_point.status ? 'Active' : 'Inactive' %>
  </span>
</p>

<div class="mt-3">
  <%= link_to 'Edit this Access Point', edit_access_point_path(@access_point), class: 'btn btn-secondary' %>
  <%= link_to 'Back to Access Points', access_points_path, class: 'btn btn-light' %>
  <%= button_to 'Delete this Access Point', @access_point, method: :delete, data: { confirm: 'Are you sure you want to delete this access point?' }, class: 'btn btn-danger' %>
</div>