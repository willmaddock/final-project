<div id="<%= dom_id(access_point) %>" class="card shadow-sm border-0 p-4 mb-4">
  <div class="card-body">
    <p>
      <strong>Location:</strong>
      <%= access_point.location %>
    </p>

    <p>
      <strong>Access Level:</strong>
      <%= access_point.access_level %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= access_point.description %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= access_point.status ? 'Active' : 'Inactive' %>
    </p>

    <div class="mt-3">
      <%= link_to 'Edit', edit_access_point_path(access_point), class: 'btn btn-primary me-2' %>
      <%= link_to 'Delete', access_point_path(access_point), method: :delete, data: { confirm: 'Are you sure you want to delete this access point?' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>