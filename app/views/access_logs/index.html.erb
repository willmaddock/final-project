<p class="text-success"><%= notice %></p>

<h1>Access Logs</h1>

<%= link_to 'New Access Log', new_access_log_path, class: 'btn btn-primary mb-3' %>

<%= form_with(url: access_logs_path, method: :get, local: true) do |form| %>
  <div class="form-group mb-3">
    <%= form.label :per_page, "Records per page:", class: "form-label" %>
    <%= form.select :per_page, [10, 20, 30], { selected: params[:per_page] || 10 },
                    { class: "form-select", onchange: 'submitPerPageForm(this.form);' } %>
  </div>
<% end %>

<% if @access_logs.any? %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>User ID</th>
      <th>Access Point ID</th>
      <th>Timestamp</th>
      <th>Successful</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @access_logs.each do |access_log| %>
      <tr>
        <td><%= access_log.user_id %></td>
        <td><%= access_log.access_point_id %></td>
        <td><%= access_log.timestamp %></td>
        <td><%= access_log.successful ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show', access_log_path(access_log), class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Edit', edit_access_log_path(access_log), class: 'btn btn-warning btn-sm' %></td>
        <td><%= button_to 'Destroy', access_log, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <!-- Update pagination to include the per_page parameter -->
  <%= paginate @access_logs, params: { per_page: params[:per_page] } %>
<% else %>
  <p>No access logs found.</p>
<% end %>

<!-- JavaScript function to ensure form submits on dropdown change -->
<script>
    function submitPerPageForm(form) {
        form.submit();
    }
</script>