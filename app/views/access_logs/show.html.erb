<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="container mt-4">
  <h2 class="mb-4">Access Log Details</h2>

  <!-- Displaying access log details in a structured way -->
  <table class="table table-bordered table-striped">
    <tbody>
    <tr>
      <th class="text-end">User ID:</th>
      <td><%= @access_log.user.username %></td>
    </tr>
    <tr>
      <th class="text-end">Access Point ID:</th>
      <td><%= @access_log.access_point.location %></td>
    </tr>
    <tr>
      <th class="text-end">Timestamp:</th>
      <td><%= @access_log.timestamp.strftime('%m/%d/%Y %H:%M') %></td>
    </tr>
    <tr>
      <th class="text-end">Successful:</th>
      <td>
          <span class="<%= @access_log.successful ? 'text-success' : 'text-danger' %>">
            <%= @access_log.successful ? 'Yes' : 'No' %>
          </span>
      </td>
    </tr>
    </tbody>
  </table>

  <!-- Action Buttons Section -->
  <div class="d-flex gap-2 mb-4">
    <%= link_to "Edit this Access Log", edit_access_log_path(@access_log), class: "btn btn-warning" %>
    <%= link_to "Back to Access Logs", access_logs_path, class: "btn btn-secondary" %>
    <%= button_to "Delete this Access Log", @access_log, method: :delete, data: { confirm: "Are you sure you want to delete this access log?" }, class: "btn btn-danger" %>
  </div>
</div>