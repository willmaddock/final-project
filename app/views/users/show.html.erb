<p style="color: green"><%= notice %></p>

<h2>User Details</h2>
<ul class="list-group mb-3">
  <li class="list-group-item"><strong>Username:</strong> <%= @user.username %></li>
  <li class="list-group-item"><strong>Full Name:</strong> <%= @user.full_name %></li>
  <li class="list-group-item"><strong>Email:</strong> <%= @user.email %></li>
  <li class="list-group-item"><strong>Role:</strong> <%= @user.role %></li>
  <li class="list-group-item"><strong>Status:</strong> <%= @user.status ? 'Active' : 'Inactive' %></li>
</ul>

<div class="d-flex">
  <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-warning me-2" %>
  <%= link_to "Back to users", users_path, class: "btn btn-secondary me-2" %>
  <%= button_to "Delete this user", @user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "btn btn-danger" %>
</div>