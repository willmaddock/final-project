<!-- Notice Styling -->
<p class="alert alert-success"><%= notice %></p>

<!-- User Details Section -->
<h2 class="mb-4">User Details</h2>
<ul class="list-group shadow-sm mb-4">
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <strong>Username:</strong>
    <span><%= @user.username %></span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <strong>Full Name:</strong>
    <span><%= @user.full_name %></span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <strong>Email:</strong>
    <span><%= @user.email %></span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <strong>Role:</strong>
    <span><%= @user.role.humanize %></span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <strong>Status:</strong>
    <span class="<%= @user.status ? 'text-success' : 'text-danger' %>">
      <%= @user.status ? 'Active' : 'Inactive' %>
    </span>
  </li>
</ul>

<!-- Action Buttons Section -->
<div class="d-flex gap-2">
  <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-warning" %>
  <%= link_to "Back to users", users_path, class: "btn btn-secondary" %>
  <%= button_to "Delete this user", @user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "btn btn-danger" %>
</div>