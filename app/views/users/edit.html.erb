<!-- Page Title -->
<h1>Editing User</h1>

<!-- Flash Messages -->
<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<!-- Instructional Text -->
<p>Please make the necessary changes to the user details below:</p>

<!-- Render the User Form Partial -->
<%= render "form", user: @user %>

<!-- Action Links -->
<div class="mt-4 d-flex">
  <%= link_to "Show this User", @user, class: "btn btn-info me-2" %>
  <%= link_to "Back to Users", users_path, class: "btn btn-secondary" %>
</div>