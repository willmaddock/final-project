<div id="<%= dom_id user %>" class="user-details mb-4 p-4 border rounded bg-light">
  <h4 class="mb-3">User Details</h4>

  <!-- User Information -->
  <p>
    <strong>Username:</strong>
    <span><%= user.username %></span>
  </p>

  <p>
    <strong>Password:</strong>
    <em>Securely stored. Cannot be displayed.</em>
  </p>

  <p>
    <strong>Full Name:</strong>
    <span><%= user.full_name %></span>
  </p>

  <p>
    <strong>Email:</strong>
    <span><%= user.email %></span>
  </p>

  <p>
    <strong>Role:</strong>
    <span><%= user.role.humanize %></span>
  </p>

  <p>
    <strong>Access Level:</strong>
    <span><%= user.access_level %></span>
  </p>

  <% if user.last_login.present? %>
    <p>
      <strong>Last Login:</strong>
      <span><%= user.last_login.strftime("%B %d, %Y at %I:%M %p") %></span>
    </p>
  <% end %>

  <p>
    <strong>Status:</strong>
    <span class="<%= user.status ? 'text-success' : 'text-danger' %>">
      <%= user.status ? 'Active' : 'Inactive' %>
    </span>
  </p>

  <!-- Action Buttons -->
  <div class="mt-3 d-flex">
    <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm me-2' %>
    <%= button_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
  </div>
</div>