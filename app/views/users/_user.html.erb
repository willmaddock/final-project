<div id="<%= dom_id user %>" class="user-details">
  <p>
    <strong>Username:</strong>
    <%= user.username %>
  </p>

  <p>
    <strong>Password:</strong>
    <em>Securely stored. Cannot be displayed.</em>
  </p>

  <p>
    <strong>Full name:</strong>
    <%= user.full_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= user.role %>
  </p>

  <p>
    <strong>Access level:</strong>
    <%= user.access_level %>
  </p>

  <% if user.last_login.present? %>
    <p>
      <strong>Last login:</strong>
      <%= user.last_login.strftime("%B %d, %Y at %I:%M %p") if user.last_login %>
    </p>
  <% end %>

  <p>
    <strong>Status:</strong>
    <%= user.status ? 'Active' : 'Inactive' %>
  </p>
</div>