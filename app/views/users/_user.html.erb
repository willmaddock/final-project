<div id="<%= dom_id user %>" class="user-details mb-3 p-3 border rounded">
  <h4>User Details</h4>

  <p>
    <strong>Username:</strong>
    <%= user.username %>
  </p>

  <p>
    <strong>Password:</strong>
    <em>Securely stored. Cannot be displayed.</em>
  </p>

  <p>
    <strong>Full name:</strong>
    <%= user.full_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= user.role %>
  </p>

  <p>
    <strong>Access level:</strong>
    <%= user.access_level %>
  </p>

  <% if user.last_login.present? %>
    <p>
      <strong>Last login:</strong>
      <%= user.last_login.strftime("%B %d, %Y at %I:%M %p") %>
    </p>
  <% end %>

  <p>
    <strong>Status:</strong>
    <%= user.status ? 'Active' : 'Inactive' %>
  </p>

  <!-- Example action buttons -->
  <div class="mt-2">
    <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
    <%= button_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
  </div>
</div>