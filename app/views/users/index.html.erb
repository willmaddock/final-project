<p class="text-success"><%= notice %></p>

<h1>Users</h1>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary mb-3' %>

<%= form_with(url: users_path, method: :get, local: true) do |form| %>
  <div class="row mb-3">
    <div class="col">
      <%= form.label :per_page, "Records per page:", class: "form-label" %>
      <%= form.select :per_page, [10, 20, 30], { selected: params[:per_page] || 10 },
                      { class: "form-select", onchange: 'submitPerPageForm(this.form);' } %>
    </div>

    <div class="col">
      <%= form.label :username, "Username", class: "form-label" %>
      <%= form.select :username, User.pluck(:username).uniq.map { |u| [u, u] }, { include_blank: true },
                      { class: "form-select", onchange: 'this.form.submit();' } %>
    </div>

    <div class="col">
      <%= form.label :full_name, "Full Name", class: "form-label" %>
      <%= form.select :full_name, User.pluck(:full_name).uniq.map { |n| [n, n] }, { include_blank: true },
                      { class: "form-select", onchange: 'this.form.submit();' } %>
    </div>

    <div class="col">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.select :email, User.pluck(:email).uniq.map { |e| [e, e] }, { include_blank: true },
                      { class: "form-select", onchange: 'this.form.submit();' } %>
    </div>

    <div class="col">
      <%= form.label :role, "Role", class: "form-label" %>
      <%= form.select :role, User.roles.keys.map { |role| [role.humanize, role] }, { include_blank: true },
                      { class: "form-select", onchange: 'this.form.submit();' } %>
    </div>

    <div class="col">
      <%= form.label :status, "Status", class: "form-label" %>
      <%= form.select :status, [['All', ''], ['Active', 'active'], ['Inactive', 'inactive']],
                      { selected: params[:status] }, { class: "form-select", onchange: 'this.form.submit();' } %>
    </div>
  </div>
<% end %>

<% if @users.any? %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Username</th>
      <th>Full Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.status ? 'Active' : 'Inactive' %></td>
        <td><%= link_to 'Show', user_path(user), class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %></td>
        <td><%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <!-- Update pagination to include the per_page parameter -->
  <%= paginate @users, params: { per_page: params[:per_page] } %>
<% else %>
  <p>No users found.</p>
<% end %>

<!-- JavaScript function to ensure form submits on dropdown change -->
<script>
    function submitPerPageForm(form) {
        form.submit();
    }
</script>