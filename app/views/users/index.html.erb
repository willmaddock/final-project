<p class="text-success"><%= notice %></p>

<h1>Users</h1>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary mb-3' %>

<%= form_with(url: users_path, method: :get, local: true) do |form| %>
  <div class="form-group mb-3">
    <%= form.label :per_page, "Records per page:", class: "form-label" %>
    <%= form.select :per_page, [10, 20, 30], { selected: params[:per_page] || 10 },
                    { class: "form-select", onchange: 'submitPerPageForm(this.form);' } %>
  </div>
<% end %>

<% if @users.any? %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Username</th>
      <th>Full Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.status ? 'Active' : 'Inactive' %></td>
        <td><%= link_to 'Show', user_path(user), class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %></td>
        <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <!-- Update pagination to include the per_page parameter -->
  <%= paginate @users, params: { per_page: params[:per_page] } %>
<% else %>
  <p>No users found.</p>
<% end %>

<!-- JavaScript function to ensure form submits on dropdown change -->
<script>
    function submitPerPageForm(form) {
        form.submit();
    }
</script>