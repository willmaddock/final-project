<div id="<%= dom_id elevated_access_request %>" class="card shadow-sm border-0 p-4 mb-4">
  <h2 class="card-title">Elevated Access Request Details</h2>

  <div class="card-body">
    <p>
      <strong>User:</strong>
      <%= elevated_access_request.user.present? ? elevated_access_request.user.full_name : "N/A" %>
    </p>

    <p>
      <strong>Access Point:</strong>
      <%= elevated_access_request.access_point.present? ? elevated_access_request.access_point.location : "N/A" %>
    </p>

    <p>
      <strong>Reason:</strong>
      <%= elevated_access_request.reason.present? ? elevated_access_request.reason : "No reason provided" %>
    </p>

    <p>
      <strong>Status:</strong>
      <span class="<%= elevated_access_request.status == 'approved' ? 'text-success' : elevated_access_request.status == 'denied' ? 'text-danger' : 'text-warning' %>">
        <%= elevated_access_request.status.humanize %>
      </span>
    </p>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Edit this Elevated Access Request", edit_elevated_access_request_path(elevated_access_request), class: 'btn btn-primary me-2' %>
    <%= link_to "Back to Elevated Access Requests", elevated_access_requests_path, class: 'btn btn-secondary' %>
  </div>
</div>